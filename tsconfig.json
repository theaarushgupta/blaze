{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./",
        "target": "ESNext",
        "allowJs": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true
    },
    "watchOptions": {
        "excludeDirectories": ["**/node_modules", "dist"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./dist/"
    ]
}